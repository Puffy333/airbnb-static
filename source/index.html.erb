    <!-- Your cards code -->
    <div class="wrapper-grey padded">
    <div class="container">
      <h2 class="text-center">Your next trip</h2>

    <div class="row">
     <% data.flats.each do |owner, flat| %>
        <div class="col-xs-12 col-md-4">
        <div class="card" style="background: url('<%= image_path flat.picture%>')">
          <div class="card-category"><%= flat.city %></div>
          <div class="card-description">
            <h2><%= flat.name %></h2>
            <p><%= flat.description %></p>
          </div>
          <%= image_tag flat.owner_picture, class: "card-user avatar"%>
          <%= link_to "#", "flats/#{owner}.html", class: "card-link" %>
          </div>
        </div>
      <% end %>
    </div>

    </div>

